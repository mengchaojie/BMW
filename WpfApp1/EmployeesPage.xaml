        <Grid Grid.Row="1">
            <ComboBox Width="100" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Template="{StaticResource DefaultComboBoxTemplate}">
                
            </ComboBox>
        </Grid>
    </Grid>
    
